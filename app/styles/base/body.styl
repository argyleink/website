*
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0) 
  text-selection($brand-color, white)
  box-sizing:border-box
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased

html
  min-height: 100%
  font-size: 62.5%
  background-color: $brand-background-color

@media all and (orientation:portrait)
  @-ms-viewport
    user-zoom: fixed
    max-zoom: 1
    min-zoom: 1

body
  font-family: $main-font-family
  background-color:$brand-background-color
  color: $text-color
  height: 100%
  letter-spacing:1px
  margin:0
  @extend .font-thin

p
  font-size: 2rem

.logo
  max-width:50%
  @media laptop
    max-width:400px

#white-cover
  width:100%
  height:100%
  background-color:white
  position:fixed
  z-index:100