reset-html5()

html
  min-height: 100%
  font-size: 62.5%

*
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)  
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased

@media all and (orientation:portrait)
  @-ms-viewport
    user-zoom: fixed
    max-zoom: 1
    min-zoom: 1

body
  font-family: 'Helvetica Neue', sans-serif;
  background-color:white
  color: text-color
  height: 100%
  overflow-y: auto
  overflow-x:hidden
  letter-spacing:1px
  margin:0
  @extend .font-thin

p
  font-size: 2rem

.logo
  max-width:40%
  @media ipadAndUp
    max-width:125px

#project
  z-index:1001
  header
    background-color:black
  .directions
    top:90vh
  .title, .project-title
    padding:0 2rem

.project-title
  color:white
  > h1
    font-size:5rem
    font-size:5vw
    margin-bottom:0
    font-weight:bold
  > p
    margin-top:0
    margin-bottom:3rem

.project-post
  color:white