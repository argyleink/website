#project
  z-index:1001
  header
    background-color:black
    .project-image
      height:100%
      position:absolute
  .directions
    top:90vh
    z-index: 0
  .title, .project-title
    padding:0 2rem
  .title
    @media phone-max
      top 55%

.project-title
  color:white
  > h1
    font-size:5rem
    font-size:5vw
    margin-bottom:0
    font-weight:bold
  > p
    margin-top:0
    margin-bottom:3rem

#project-post
  color:white
  a
    color:white
    &:hover
      color:brand-color
  @media laptop
    > p
      width:50vw
      margin-left:auto
      margin-right:auto

  img ~ h5
    font-size:1.5rem