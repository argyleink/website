#project
  z-index:1001
  header
    height:100vh
    background-color:black
    overflow:hidden
    z-index:0
    .project-image
      height:100%
      position:absolute
  .directions
    top:90vh
    z-index: 0
  .title, .project-title
    padding:0 2rem
  .title
    @media phone-max
      top 55%
    h2
      font-weight:lighter

.project-title
  color:white
  > h1
    font-size:3rem
    font-size:10vw
    margin-bottom:0
    font-weight:bold
  > p
    margin-top:0
    margin-bottom:3rem
  @media laptop
    > h1
      font-size:7rem
      font-size:5vw

#project-post
  color:white
  a
    color:white
    &:hover
      color:brand-color
  > p
    font-size:1.7rem
    font-weight:lighter
  @media laptop
    > p
      font-size:2rem
      font-weight:normal
      width:50vw
      margin-left:auto
      margin-right:auto

  img ~ h5
    font-size:1.5rem
    margin-top:1rem
    margin-bottom:1rem
    color:hsl(0, 0%, 50%)