li.title-box
  .row
    .column-4-hand
      img(src='img/avatar.png')
    .column-8-hand
      a
        h1 Hi! 
        h2 I'm Adam Argyle
        h3.hint-text
          i.fa.fa-fw.fa-html5
          i.fa.fa-fw.fa-css3
          i.fa.fa-fw.fa-git
          i.fa.fa-fw.fa-apple
          i.fa.fa-fw.fa-android
          i.fa.fa-fw.fa-windows

each item in projects
  case item.type
    when 'project'
      li.project(data-key=item.key)
        a(href=item.url)
          img(src=item.image)
          figcaption
            h3= item.title
            p= item.detail
    when 'social'
      li.social
        a.light(href=item.url)
          .row.center-hand.middle-hand
            .column-8-hand  
              if item.title
                i(class="social-icon block text-center fa fa-"+item.title)
              if item.detail
                p= item.detail
    when 'message'
      li.message
        a
          .fa.fa-quote-left.fa-3x
          p= item.message